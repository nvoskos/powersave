# Application
APP_NAME=PowerSave API
APP_VERSION=1.0.0
DEBUG=True

# Database
DATABASE_URL=postgresql://powersave:powersave@localhost:5432/powersave

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Energy Pricing (Cyprus EAC rates)
KWH_TO_EUR_RATE=0.30
CO2_EMISSION_FACTOR=0.7

# Gamification
GREEN_POINTS_PER_KWH=10
BONUS_MULTIPLIER_DOUBLE_DAYS=2.0

# Session Settings
SESSION_DURATION_HOURS=3
BASELINE_CALCULATION_DAYS=10
PEAK_HOURS_START=17
PEAK_HOURS_END=20

# Municipality Integration
MUNICIPALITY_API_BASE_URL=http://localhost:8001/api
MUNICIPALITY_API_KEY=municipality-api-key

# Smart Meter Integration (AHK/EAC)
AHK_API_BASE_URL=http://localhost:8002/api
AHK_API_KEY=ahk-api-key

# Notifications
ENABLE_PUSH_NOTIFICATIONS=True
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# ============================================
# AI Tools Configuration (OpenAI API)
# ============================================

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Default AI Model
# Available models: gpt-4, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# AI Tools Backend Proxy
# This proxy bypasses CORS restrictions for browser-based AI tools
AI_PROXY_ENABLED=True
AI_PROXY_PORT=8080
AI_PROXY_CORS_ORIGINS=*

# AI Tools Configuration
# These tools use the backend proxy to access OpenAI API
AI_TOOLS_ENDPOINT=http://localhost:8080/api/ai

# Alternative: GenSpark OpenAI-Compatible API (Optional)
# Uncomment to use GenSpark instead of OpenAI:
# OPENAI_API_KEY=gsk-your-genspark-key-here
# OPENAI_BASE_URL=https://www.genspark.ai/api/llm_proxy/v1
# OPENAI_MODEL=gpt-5-mini
